<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Palette.MainPage">
    
    <Grid x:Name="Container" BackgroundColor="{StaticResource Container}">
        <Frame Margin="50,0,50,0" VerticalOptions="Center" CornerRadius="15" HasShadow="True">
            <StackLayout Spacing="15" VerticalOptions="Center">
                <Label FontAttributes="Bold"
                       FontSize="Large"
                       HorizontalTextAlignment="Center"
                       Text="Palette"
                       TextColor="{StaticResource Title}"/>
            </StackLayout>
        </Frame>
    </Grid>
    
</ContentPage>
