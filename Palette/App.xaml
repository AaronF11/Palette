<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Palette.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- BackgroundColor of the container -->
            <Color x:Key="Container">white</Color>
            
            <!-- Label: Title -->
            <Color x:Key="Title">black</Color>
            
            <!-- Slider: Colors of the component -->
                
            <!-- Red Theme Colors -->
            <Color x:Key="Primary-red">#FF4136</Color>
            <Color x:Key="Secondary-red">#FFC1C1</Color>
            <Color x:Key="Tertiary-red">#85144B</Color>
            <!-- Green Theme Colors -->
            <Color x:Key="Primary-green">#2ECC40</Color>
            <Color x:Key="Secondary-green">#E0E0E0</Color>
            <Color x:Key="Tertiary-green">#3D9970</Color>
            <!-- Blue Theme Colors -->
            <Color x:Key="Primary-blue">#007AFF</Color>
            <Color x:Key="Secundary-blue">#E0E0E0</Color>
            <Color x:Key="Tertiary-blue">#007AFF</Color>
            <!-- Transparency Theme Colors -->
            <Color x:Key="Primary-transparency">#666666</Color>
            <Color x:Key="Secondary-transparency">#DDDDDD</Color>
            <Color x:Key="Tertiary-transparency">#333333</Color>
        </ResourceDictionary>
    </Application.Resources>
</Application>